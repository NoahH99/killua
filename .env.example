# Discord Bot Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Admin User ID (for dangerous commands like /mc exec, /mc op, etc.)
# To get your Discord ID, enable Developer Mode in Discord settings,
# then right-click your username and select "Copy ID"
ADMIN_DISCORD_ID=your_discord_user_id_here

# AWS Configuration
# AWS region where your EC2 instance is located
AWS_REGION=us-east-1

# EC2 instance ID for your Minecraft server
EC2_INSTANCE_ID=i-xxxxxxxxxxxxxxxxx

# Minecraft RCON Configuration
# Port for RCON connection (default: 25575)
RCON_PORT=25575

# RCON password (must match server.properties rcon.password)
RCON_PASSWORD=your_rcon_password_here

# Cloudflare DNS Configuration (optional but recommended)
# API token with DNS edit permissions
# Get from https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare zone ID (found in your domain's overview page)
CF_ZONE_ID=your_zone_id_here

# DNS record name for your Minecraft server
CF_DNS_RECORD_NAME=mc.yourdomain.com

# Server Management
# Number of minutes with 0 players before auto-shutdown
IDLE_MINUTES_BEFORE_STOP=5

# CloudWatch Logs Configuration
# CloudWatch log group name for Minecraft server logs
MC_CW_LOG_GROUP=minecraft-server
